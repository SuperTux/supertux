	  (fps 14)
	  (images "smartblock-0.png"
            "smartblock-1.png"
            "smartblock-2.png"
            "smartblock-3.png"
            "smartblock-4.png"
            "smartblock-5.png"
            "smartblock-6.png"
            "smartblock-7.png"))

	(action
	  (name "right")
	  (hitbox 8 10 32 32)
